# AI Provider (Fireworks)
FIREWORKS_API_KEY=your_fireworks_api_key_here

# Database (PostgreSQL)
POSTGRES_URL=postgres://localhost:5432/privy

# Auth.js Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your_auth_secret_here

# Logfire Observability (OpenTelemetry)
# Get your token from: https://logfire.pydantic.dev
LOGFIRE_TOKEN=your_logfire_write_token
OTEL_EXPORTER_OTLP_ENDPOINT=https://logfire-api.pydantic.dev
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer ${LOGFIRE_TOKEN}

# Optional: Vercel Blob for file storage
BLOB_READ_WRITE_TOKEN=

# REQUIRED: Vercel KV for rate limiting
# Create in Vercel Dashboard → Storage → Create Database → KV
# Auto-configured when you connect KV store to project
# KV_URL, KV_REST_API_URL, KV_REST_API_TOKEN (auto-added by Vercel)

# REQUIRED: Cloudflare Turnstile (bot protection)
# Get keys at: https://dash.cloudflare.com/?to=/:account/turnstile
CLOUDFLARE_TURNSTILE_SECRET=your_turnstile_secret_key
CLOUDFLARE_TURNSTILE_SITE_KEY=your_turnstile_site_key

# Optional: Redis for resumable streams
REDIS_URL=

# Optional: Stripe for payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
